{
    "manifest_version": 3,
    "name": "Highlight Saver",
    "version": "1.0",
    "description": "Highlight text on any page and save it locally.",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background/background.js"
    },
    "action": {
      "default_popup": "index.html"
      
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/contentScript.js"]
      }
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }